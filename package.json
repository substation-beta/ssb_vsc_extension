{
    "name": "ssb",
    "displayName": "ssb",
    "description": "Substation beta",
    "version": "0.1.3",
    "license": "MIT",
    "publisher": "Substation-Beta",
    "homepage": "https://github.com/substation-beta",
    "repository": "https://github.com/substation-beta/ssb_vsc_extension",
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#1F2833",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ssb",
                "aliases": [
                    "Substation Beta",
                    "ssb"
                ],
                "extensions": [
                    ".ssb"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ssb",
                "scopeName": "source.ssb",
                "path": "./syntaxes/ssb.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:ssb"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    }
}
